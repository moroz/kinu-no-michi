package templates

import "github.com/moroz/kinu-no-michi/lib/coinapi"

templ PagesIndex(currentRate *coinapi.ExchangeRate) {
	@Layout("Hello") {
		<p>This is rendered by Templ</p>
		if currentRate != nil {
			<p>1 { currentRate.Base } = { currentRate.Rate.String() } { currentRate.Quote }</p>
		} else {
			<p>No data available</p>
		}
	}
}
